<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClashAttackBreakdown.Views.StartingPage">
    <ContentPage.Content>
        <StackLayout>
            <Label VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Text="Welcome to Clash Breakdown"
                   TextColor="{StaticResource StandardTextColor}"/>
            <Button VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Text="Load File"
                    x:Name="btnLoadFile"
                    Clicked="BtnLoadFile_Clicked"/>
            <Label VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Text="No file loaded yet"
                   x:Name="lblFileLoad"
                   TextColor="{StaticResource StandardTextColor}"/>
            <Button VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Text="Click Me"
                    x:Name="BtnClickMe"
                    Clicked="BtnClickMe_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>